            //-------------Out-Dental (OP)

            //- BAR CHART -
            var areaChartData = {
                labels: ['In- Hospitalization / In-Patient (IP)', 'Maternity', 'Out-Patient (OP)', 'Dental', 'Optical'],
                datasets: [
                    {
                        label: 'Used',
                        backgroundColor: 'rgba(250, 5, 42,0.9)',
                        borderColor: 'rgba(250, 5, 42,0.8)',
                        pointRadius: false,
                        pointColor: '#3b8bba',
                        pointStrokeColor: 'rgba(250, 5, 42,1)',
                        pointHighlightFill: '#fff',
                        pointHighlightStroke: 'rgba(250, 5, 42,1)',
                        data: [200000, 30000, 20000, 0, 0]
                    },
                    {
                        label: 'Available',
                        backgroundColor: 'rgba(0, 255, 89, 1)',
                        borderColor: 'rgba(0, 255, 89, 1)',
                        pointRadius: false,
                        pointColor: 'rgba(0, 255, 89, 1)',
                        pointStrokeColor: '#c1c7d1',
                        pointHighlightFill: '#fff',
                        pointHighlightStroke: 'rgba(0, 255, 89,1)',
                        data: [200000, 82500, 60000, 12000, 12000]
                    },
                ]
            }
            //-------------
            //---------------------
            //- STACKED BAR CHART -
            //---------------------
            var stackedBarChartCanvas = $('#stackedBarChart').get(0).getContext('2d')
            var stackedBarChartData = $.extend(true, {}, areaChartData)

            var stackedBarChartOptions = {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    xAxes: [{
                        stacked: true,
                    }],
                    yAxes: [{
                        stacked: true
                    }]
                }
            }

            new Chart(stackedBarChartCanvas, {
                type: 'bar',
                data: stackedBarChartData,
                options: stackedBarChartOptions
            })



        });



</script>
