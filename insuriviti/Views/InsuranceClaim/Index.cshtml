@model IEnumerable<insuriviti.ViewModel.ProcessClaim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_masterlayout.cshtml";
}

@if (Model.Count() == 0 || Model == null)
{
    <p> Nothing to process. </p>
}
else
{

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClaimId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeName)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.ClaimAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PatientName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RelationWithPatient)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GroupPolicyNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NatureOfSick)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.ClaimId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmployeeName)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.ClaimAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PatientName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RelationWithPatient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GroupPolicyNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NatureOfSick)
                    </td>
                    
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ClaimId">Edit</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}